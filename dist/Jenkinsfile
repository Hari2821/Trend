pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        CLUSTER_NAME = "trend-cluster"
        DOCKER_IMAGE = "hari2821/trend-app:latest"
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')  // Jenkins credential ID
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Since Jenkinsfile is in /dist, go one level up to get repo root if needed
                dir("${WORKSPACE}") {
                    echo "Cloning repository..."
                    git branch: 'main', url: 'https://github.com/Vennilavan12/Trend.git'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${WORKSPACE}/dist") {
                    echo "Building Docker image..."
                    sh 'docker build -t hari2821/trend-app:latest .'
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                dir("${WORKSPACE}/dist") {
                    echo "Pushing image to DockerHub..."
                    sh '''
                        echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                        docker push hari2821/trend-app:latest
                    '''
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                dir("${WORKSPACE}/dist/k8") {
                    echo "Deploying to AWS EKS..."
                    sh '''
                        aws eks update-kubeconfig --region ${AWS_REGION} --name ${CLUSTER_NAME}
                        kubectl apply -f deployment.yaml
                        kubectl apply -f service.yaml
                        kubectl rollout status deployment/trend-deployment
                        kubectl get svc trend-service
                    '''
                }
            }
        }

